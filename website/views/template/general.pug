//- header block
doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='icon' href='assets/icons/favicon.png')
  title #{title || "Algorithms With Dyno"}
  link(rel='stylesheet' type="text/css" href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css' integrity='sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==' crossorigin='anonymous')
  link(rel='stylesheet' type="text/css" href='styles/css/atomic.css')
  link(rel='stylesheet' type="text/css" href='styles/css/menu.css')
  link(rel='stylesheet' type="text/css" href='styles/css/reset.css')
  block style
body
  //- navigation
  nav.d-flex.justify-content-between.container-fluid
    ul.menu.d-flex
      li.menu-item
        a(href='/')
          i.fas.fa-home
      li.menu-item.active
        | Algorithms
        // Sub menu for algorithm
        ul.sub-menu.flex-col
          a(href='sort')
            li.sub-menu-item Sorts
      li.menu-item Data Structures
      li.menu-item Javascript
      li.menu-item Tips
    // search
    .search-bar.flex-center--ver
      #searchBar.search-bar-control(style='display: none')
        input(autofocus='' maxlength='40' type='text' placeholder='Enter the keyword ...')
        button#search.btn
          i.fas.fa-search
      #openSearchIcon.search-bar-icon.flex-center--ver.h-100
        i.fas.fa-search
      // close search icon
      #closeSearchIcon.search-bar-icon.flex-center--ver.h-100(style='display: none')
        i.fas.fa-times
  
  //- content
  block content

  //- script
  script(src='vendors/scripts/jquery.min.js')
  script(src='scripts/menu.js')
  block script


