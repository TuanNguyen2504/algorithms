mixin slideMenu
  #overlay
  #slideNav
    .icon.cur-pointer
      i.fas.fa-times#closeSlideMenuIcon
    ul.slide-menu 

      a(href="/")
        li(class=current==='home'?'active':'').slide-menu-item 
          span Home

      //- algotithms
      li(data-toggle-id="subAlg", class=current==='algorithm'?'active':'').slide-menu-item
        span.arrow-down Algorithms

      ul.sub-slide-menu.hide#subAlg
        a(href="/sort")
          li(class=sub==='sort'?'active':'').sub-slide-menu-item
            span Sorts

      //- data structure
      li.slide-menu-item 
        span Data Structure

      //- js
      li.slide-menu-item 
        span Javascript

      //- tips
      li.slide-menu-item  
        span Tips